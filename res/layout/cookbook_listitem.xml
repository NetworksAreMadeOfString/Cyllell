
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayoutNodeListItem">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon5" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/nodeIcon" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"></ImageView>
