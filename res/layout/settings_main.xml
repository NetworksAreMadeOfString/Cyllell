
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/settingScrollViewContainer">
        <RelativeLayout android:id="@+id/relativeLayoutSettingsMain" android:layout_width="fill_parent" android:layout_height="fill_parent">
        	<TextView android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_width="fill_parent" style="@style/codeops_titlebar" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/TitleBarText" android:text="Cyllell - Settings"></TextView>
	        <EditText android:id="@+id/chefServerURL" android:layout_marginLeft="20px" android:layout_marginTop="20px" android:layout_height="wrap_content" android:hint="chef.server.com" android:layout_width="330px" android:layout_below="@+id/TitleBarText"></EditText>
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/chefServerURL" android:id="@+id/timeTitle" android:text="Current Time: " android:layout_below="@+id/chefPrivateKey" android:layout_marginTop="20px"></TextView>
	        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/timeDescription" android:text="Ensure your device time matches that on your Chef server otherwise authentication will fail." android:textSize="4pt" android:gravity="center_vertical|center_horizontal" android:layout_below="@+id/timeTitle" android:layout_marginTop="24px"></TextView>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/saveSettingsButton" android:text="Save Settings" android:layout_centerHorizontal="true" android:layout_marginTop="80px" android:layout_alignParentBottom="true"></Button>
	        <DigitalClock android:text="DigitalClock" android:layout_width="wrap_content" android:layout_toRightOf="@+id/timeTitle" android:layout_height="wrap_content" android:layout_alignTop="@+id/timeTitle" android:layout_alignBottom="@+id/timeTitle" android:id="@+id/digitalClock"></DigitalClock>
	        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LoadTimeSettings" android:layout_alignBaseline="@+id/digitalClock" android:text="Change Time" android:textSize="4pt" android:layout_alignParentRight="true" android:layout_marginRight="20px"></Button>
	        <EditText android:layout_height="wrap_content" android:id="@+id/chefClientName" android:layout_below="@+id/chefServerURL" android:layout_width="fill_parent" android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_marginTop="20px" android:hint="Client Name"></EditText>
	        <EditText android:inputType="textMultiLine" android:id="@+id/chefPrivateKey" android:layout_below="@+id/chefClientName" android:layout_marginTop="20px" android:hint="@string/fake_private_key" android:minLines="24" android:maxLines="24" android:gravity="top|left" android:lines="24" android:layout_width="300dp" android:textSize="7dp" android:layout_height="260dp" android:layout_centerHorizontal="true"></EditText>
	        <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/chefSelfSigned" android:layout_toRightOf="@+id/chefServerURL" android:text="Self Signed" android:layout_alignBottom="@+id/chefServerURL" android:layout_marginBottom="8px" android:textSize="5pt" android:checked="true"></CheckBox>
        </RelativeLayout>
    </ScrollView>
