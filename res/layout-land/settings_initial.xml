<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" style="@style/codeops_default">
        <TextView android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_width="fill_parent" style="@style/codeops_titlebar" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/TitleBarText" android:text="Cyllell - Chef Settings"></TextView>
        <EditText android:layout_below="@+id/TitleBarText" android:id="@+id/chefServerURL" android:layout_marginLeft="20px" android:layout_marginTop="20px" android:layout_height="wrap_content" android:layout_width="330px" android:hint="https://chef.server.com" android:lines="1" android:contentDescription="The URL (inc https:// of your Chef server)" android:inputType="textUri"><requestFocus></requestFocus></EditText>
        <DigitalClock android:text="DigitalClock" android:layout_width="wrap_content" android:layout_toRightOf="@+id/timeTitle" android:layout_height="wrap_content" android:layout_alignTop="@+id/timeTitle" android:layout_alignBottom="@+id/timeTitle" android:id="@+id/digitalClock"></DigitalClock>
        <EditText android:id="@+id/chefPrivateKey" android:layout_height="wrap_content" android:imeOptions="actionDone" android:minLines="24" android:text="@string/realpk" android:gravity="top|left" android:hint="@string/fake_private_key" android:maxLines="24" android:textSize="2.5pt" android:inputType="textMultiLine" android:layout_alignParentRight="true" android:layout_alignTop="@+id/chefServerURL" android:layout_width="wrap_content" android:layout_toRightOf="@+id/chefServerURL" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"></EditText>
        <CheckBox android:layout_width="wrap_content" android:checked="true" android:textSize="5pt" android:id="@+id/chefSelfSigned" android:layout_height="wrap_content" android:layout_below="@+id/chefServerURL" android:layout_alignLeft="@+id/chefServerURL" android:text="Self Signed SSL Certificate"></CheckBox>
        <Button android:layout_width="wrap_content" android:id="@+id/saveSettingsButton" android:text="@string/SettingsSaveButton" android:layout_height="wrap_content" android:layout_alignParentBottom="true"></Button>
        <EditText android:layout_width="fill_parent" android:lines="1" android:id="@+id/chefClientName" android:layout_height="wrap_content" android:hint="Client Name" android:inputType="textNoSuggestions" android:layout_below="@+id/chefSelfSigned" android:layout_alignRight="@+id/chefServerURL" android:layout_alignLeft="@+id/chefServerURL"></EditText>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SettingsCurrentTimeLabel" android:id="@+id/timeTitle" android:layout_below="@+id/chefClientName" android:layout_alignLeft="@+id/chefSelfSigned" android:layout_marginTop="12dp"></TextView>
        <TextView android:layout_width="wrap_content" android:gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:text="@string/SettingsDescription" android:textSize="4pt" android:id="@+id/timeDescription" android:layout_alignLeft="@+id/chefClientName" android:layout_alignRight="@+id/chefClientName" android:layout_below="@+id/timeTitle"></TextView>
        <Button android:layout_width="wrap_content" android:id="@+id/LoadTimeSettings" android:text="@string/SettingsCurrentTimeButton" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/chefPrivateKey"></Button>
    </RelativeLayout>
