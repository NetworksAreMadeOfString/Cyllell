
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayoutMain" style="@style/codeops_default" android:background="@color/codeops_background_light">
        <ImageView android:src="@drawable/chef_logo_trans" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:id="@+id/chefWaterMark"></ImageView>

        <LinearLayout
            android:id="@+id/buttonGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView android:src="@drawable/nodes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:id="@+id/NodeImageView"></ImageView>
            <ImageView android:src="@drawable/recipe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:id="@+id/CookbookImageView"></ImageView>
            <ImageView android:layout_marginRight="24dp" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_width="wrap_content" android:src="@drawable/role" android:id="@+id/RoleImageView"></ImageView>
        </LinearLayout>
        
        <LinearLayout android:layout_height="wrap_content" android:layout_below="@+id/buttonGroup1" android:layout_centerHorizontal="true" android:id="@+id/buttonGroup2" android:layout_width="fill_parent" android:layout_marginTop="48dp" android:gravity="center_vertical|center_horizontal">
            <ImageView android:layout_marginRight="24dp" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_width="wrap_content" android:id="@+id/SettingsImageView" android:src="@drawable/settings"></ImageView>
            <ImageView android:layout_marginRight="24dp" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_width="wrap_content" android:id="@+id/SearchImageView" android:src="@drawable/search"></ImageView>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:src="@drawable/environment" android:id="@+id/EnvironmentImageView"></ImageView>
        </LinearLayout>
        <ProgressBar android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:id="@+id/backgroundProgress" android:indeterminate="true" android:visibility="invisible"></ProgressBar>
    </RelativeLayout>
